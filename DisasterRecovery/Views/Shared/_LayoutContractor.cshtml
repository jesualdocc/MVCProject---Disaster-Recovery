<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/Content/main.css" />

    <title>Contractor -  Disaster Recovery</title>
</head>

<body>

    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading"><img id="logo" style="width: 200px;" src="~/Content/img/4teamlogo.png"></div>
            <div class="list-group list-group-flush">
                <a href="~/TimeCards/Index" class="list-group-item list-group-item-action menu-active"><i class="fa fa-home"></i>TimeCard List</a>
                <a href="~/TimeCards/Create" class="list-group-item list-group-item-action"><i class="fa fa-table" aria-hidden="true"></i>Add TimeCard</a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light border-bottom">
                <button class="btn btn-link" id="menu-toggle">
                    <i id="open-close" class="fa fa-long-arrow-left" aria-hidden="true"></i>
                </button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-circle" aria-hidden="true"></i> Welcome @Session["LogedUserName"]
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                @{if (@Session["LogedUserRole"] != null)
                                    {
                                       <a class="dropdown-item" href="~/Users/Details/@Session["LogedUserID"]"><i class="fa fa-cog" aria-hidden="true"></i> Settings</a>
                                       <div class="dropdown-divider"></div>
                                       }
                                }
                                
                                @{if (@Session["LogedUserName"] == null)
                                    {
                                        <a class="dropdown-item" href="~/Login/Index"><i class="fa fa-sign-in" aria-hidden="true"></i> Sign in</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" href="~/Login/Logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Sign Out</a>
                                    }
                                }

                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                <div class="row">
                    <div class="card col-md-12">
                        <div class="pd-15">
                            @RenderBody()
                            @RenderSection("scripts", required: false)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- javascrips imports -->
    <script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/template-functions.js"></script>
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable();
            $('#JoblistTable').DataTable();
            $('#SiteLocationTable').DataTable();
            $('#SubContractorTable').DataTable();
        });
    </script>

</body>

</html>