@model DisasterRecovery.Models.TimeCard

@{
    ViewBag.Title = "Create";

     if (Session["LogedUserRole"] == "Contractor")
    {
        Layout = "~/Views/Shared/_LayoutContractor.cshtml";
    }
}

    <center>
        <h2>Enter New Timesheet</h2>

    </center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SiteID, "Site Location", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SiteID", null, "Seletct Location", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SiteID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdSubContractor, "Contractor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdSubContractor", null, "Select Contractor", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdSubContractor, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}